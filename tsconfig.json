{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
}
